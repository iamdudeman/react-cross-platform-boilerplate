{
  "name": "react-cross-platform-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "private": true,
  "directories": {},
  "scripts": {
    "desktop:dev": "cd ./desktop && npm run dev",
    "desktop:prod": "cd ./desktop && npm run prod",
    "desktop:test": "cd ./desktop && npm run test",
    "dev-server": "node ./dev-server/index.js",
    "native:dev": "cd ./native && npm run dev",
    "native:test": "cd ./native && npm run test",
    "preinstall": "cd ./shared && npm install && cd ../desktop && npm install && cd ../native && npm install &&  cd ../dev-server && npm install",
    "postinstall": "./create-shared-npm-link.sh",
    "web:dev": "./node_modules/.bin/webpack -d --watch",
    "web:prod": "rm -rf ./build/web && ./node_modules/.bin/webpack -p --progress",
    "web:test": "./node_modules/mocha/bin/mocha ./web/src/**/*.test.js --compilers js:babel-core/register",

    "shared:test": "./node_modules/mocha/bin/mocha ./shared/src/**/*.test.js --compilers js:babel-core/register"

  },
  "repository": {
